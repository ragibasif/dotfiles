    pager = delta
    fsync = none

[pager]
    branch = false
    tag = false

[blame]
    coloring = highlightRecent
    date = relative

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true

[merge]
    conflictstyle = zdiff3

[init]
	defaultBranch = master

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all

[color]
	ui = true

[log]
    abbrevCommit = true
    graphColors = blue,yellow,cyan,magenta,green,red

[commit]
	template = ~/.config/git/template
    ; gpgSign = true
    verbose = true

[push]
    autoSetupRemote = true
    default = current
    followTags = true


[pull]
    default = current
    rebase = true

[rebase]
    autoStash = true
    missingCommitsCheck = warn

[fetch]
    prune = true

