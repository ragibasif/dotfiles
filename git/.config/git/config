	current = yellow bold
	local = green bold
	remote = cyan bold
    upstream = green
    plain    = blue

[color "diff"]
	meta = black bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = yellow reverse
    context = white

[color "status"]
